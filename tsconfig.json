{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["esnext"],
        "module": "commonjs",
        "rootDir": ".",
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}
